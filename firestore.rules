// Firestore Security Rules para Tribu Impulsa
// IMPORTANTE: Copiar estas reglas a Firebase Console > Firestore > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Perfiles de usuarios - lectura pública, escritura solo autenticado o por userId
    match /profiles/{profileId} {
      allow read: if true;
      allow write: if true; // En producción: request.auth != null
    }
    
    // Progreso del checklist - solo el usuario puede leer/escribir su progreso
    match /progress/{userId} {
      allow read, write: if true; // En producción: request.auth.uid == userId
    }
    
    // Interacciones (reportes, compartidos) - lectura pública, escritura autenticada
    match /interactions/{interactionId} {
      allow read: if true;
      allow write: if true; // En producción: request.auth != null
    }
    
    // Configuración de la app - solo lectura
    match /config/{configId} {
      allow read: if true;
      allow write: if false; // Solo admin vía Firebase Console
    }
  }
}

// NOTA: Estas reglas son permisivas para desarrollo.
// Para producción, cambiar `if true` por validaciones de autenticación.
