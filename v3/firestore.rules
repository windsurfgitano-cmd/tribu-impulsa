
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Adjust this based on your admin logic. 
      // Option A: Custom Claim
      // return request.auth.token.admin == true;
      // Option B: Hardcoded ID (Simpler for small teams)
      // return request.auth.uid == 'ADMIN_UID_HERE'; 
      // Option C: Firestore document lookup (More flexible)
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Users Collection ---
    // Users can read/write their own profile.
    // Admins can read/write all.
    // Public/Authenticated users can read basic info (name, photo) of others for social features (Feed/Tribes)
    match /users/{userId} {
      allow read: if isAuthenticated(); // Broad read for Tribu matching purposes
      allow write: if isOwner(userId) || isAdmin();
    }

    // --- Tribes Collection (Relation System) ---
    match /tribes/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin(); // Only system/owner should modify tribe
    }

    // --- Notifications ---
    match /notifications/{notificationId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow write: if false; // Only manageable via Cloud Functions / Admin SDK
    }

    // --- App Content (Read Only for Users) ---
    match /content/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // --- Surveys ---
    match /surveys/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
  }
}
